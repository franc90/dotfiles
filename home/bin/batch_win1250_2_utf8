#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

FILES=$(
  find . -maxdepth 1 -type f | # find files in curr dir
    sed 's|^\.\/||' | # remove './' from beginning
    sort |
    fzf -m --phony --no-sort --cycle --layout=reverse --preview='bat --style=numbers --color=always {} | head -500'
)

while IFS= read -r FILE; do
  win1250_2_utf8 "$FILE"
done <<<"$FILES"
