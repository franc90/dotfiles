" General
set number relativenumber
set linebreak
" when lines are numbered I don't feel it is needed
" set showbreak=+++
set showmatch

set hlsearch
set smartcase
set incsearch

set autoindent
set tabstop=4
set shiftwidth=4
set smartindent
set smarttab

" Other
set ruler
set listchars=tab:>-,trail:·,space:·
set list
set wildmenu

set background=dark

hi Whitespace ctermfg=DarkGray
match Whitespace /\s/
